<%- include ('partials/header') %>
    
    <div class="jumbotron text-center">
        <h1 class="display-4">TruSponse Engage</h1>
        <p class="lead">Reputation management simplified</p>
        <hr class="my-4">
        <p>Take control over managing your online reputation and take back your time!</p>
        <a class="btn btn-primary" href="#">Get Started for Free</a>
      </div>

    <section id="pricing" class="container">
        <div class="row">
          <% for (var i = 0; i < plans.length; i++) { %>
          <div class="col-sm-4">
            <div class="card text-center">
              <div class="card-header">
                <h3><%= plans[i].name %></h3>
              </div>
              <div class="card-body">
                <p><%= plans[i].class %></p>
                <p>$<%= plans[i].price %>/month</p>
                <ul>
                    <% for (var j = 0; j < plans[i].features.length; j++) { %>
                      <li><%= plans[i].features[j] %></li>
                    <% } %>
                </ul>
                <a href="<%= plans[i].link %>" class="btn btn-primary">Sign Up</a>
              </div>
            </div>
          </div>
          <% } %>  
        </div> 
      </section>
      
      
  </body>
</html>


